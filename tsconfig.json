{
  "compilerOptions": {
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "test",
    "dist",
    "node_modules"
  ],
  "ts-node": {
    "files": true
  },
}
